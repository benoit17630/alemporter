{% extends 'base.html.twig' %}

{% block title %}Cheese index{% endblock %}

{% block body %}
    <h1>Cheese index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cheese in cheeses %}
            <tr>

                <td>{{ cheese.name }}</td>
                <td>
                    <a href="{{ path('admin_cheese_show', {'id': cheese.id}) }}">show</a>
                    <a href="{{ path('admin_cheese_edit', {'id': cheese.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_cheese_new') }}">Create new</a>
{% endblock %}
