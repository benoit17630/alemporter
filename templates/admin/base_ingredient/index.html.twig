    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for base_ingredient in base_ingredients %}
            <tr>

                <td>{{ base_ingredient.name }}</td>
                <td>
                    <a href="{{ path('admin_base_ingredient_show', {'id': base_ingredient.id}) }}">show</a>
