{% extends 'base.html.twig' %}

{% block title %}Legume index{% endblock %}

{% block body %}
    <h1>Legume index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for legume in legumes %}
            <tr>

                <td>{{ legume.name }}</td>
                <td>
                    <a href="{{ path('admin_legume_show', {'id': legume.id}) }}">show</a>
                    <a href="{{ path('admin_legume_edit', {'id': legume.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_legume_new') }}">Create new</a>
{% endblock %}
